<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.nooskewl.crystalpicnic"
      android:versionCode="5"
      android:versionName="1.1.1">
    <application android:label="@string/app_name" android:icon="@drawable/icon" android:logo="@drawable/logo" android:theme="@style/NoActionBar">
        <activity android:name="com.nooskewl.crystalpicnic.CPActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleTask"
                  android:screenOrientation="landscape"
                  android:configChanges="screenLayout|uiMode|orientation"
		   >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.DREAMING_STARTED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.DREAMING_STOPPED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!--  Tell Allegro the name of the game .so when using dynamic linking -->
            <meta-data android:name="org.liballeg.app_name" android:value="crystalpicnic" />
        </activity>
        <meta-data android:name="isGame" android:value="true" />
    </application>
    <uses-feature android:glEsVersion="0x00020000" />
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk android:minSdkVersion="12" />
</manifest> 
